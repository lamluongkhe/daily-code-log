<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0">

    <cm:property-placeholder persistent-id="person-impl-b" update-strategy="reload">
        <cm:default-properties>
            <cm:property name="redis.host" value="redis"/>
            <cm:property name="redis.port" value="6379"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <bean id="jedis" class="redis.clients.jedis.Jedis">
        <argument value="${redis.host}"/>
        <argument value="${redis.port}"/>
    </bean>

    <bean id="personService" class="com.llk.implB.PersonImpl">
        <property name="jedis" ref="jedis"/>
    </bean>

    <bean id="personKafkaConsumer"
          class="com.llk.implB.kafka.PersonKafkaConsumer"
          init-method="start"
          destroy-method="stop">
        <property name="personService" ref="personService"/>
    </bean>

    <service ref="personService" interface="com.llk.apiB.PersonService"/>
    <service ref="personKafkaConsumer" interface="com.llk.apiB.PersonEventConsumer"/>
</blueprint>
