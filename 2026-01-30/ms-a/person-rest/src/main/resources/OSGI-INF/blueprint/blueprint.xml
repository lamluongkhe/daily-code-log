<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs">


    <reference id="personService" interface="com.llk.api.PersonService"/>

    <bean id="personServiceProxy" class="com.llk.rest.PersonRest">
        <argument ref="personService"/>
    </bean>



    <cxf:bus id="personServiceBus">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

<!--    <jaxrs:server address="/person" id="personRest">-->
<!--        <jaxrs:serviceBeans>-->
<!--            <ref component-id="personServiceProxy"/>-->
<!--        </jaxrs:serviceBeans>-->
<!--    </jaxrs:server>-->

    <bean id="jsonProvider"
          class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>


    <jaxrs:server address="/person" id="personRest">
        <jaxrs:serviceBeans>
            <ref component-id="personServiceProxy"/>
        </jaxrs:serviceBeans>

        <jaxrs:providers>
            <ref component-id="jsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

</blueprint>