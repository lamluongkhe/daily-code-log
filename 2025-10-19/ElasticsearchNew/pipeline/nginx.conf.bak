input {
  beats {
    port => 5044
  }
}

filter {
  if "error.log" in [log][file][path] {
    grok {
      match => { "message" => "%{TIMESTAMP_ISO8601:nginx.time} \[%{LOGLEVEL:nginx.level}\] %{NUMBER:pid:int}#%{NUMBER:tid:int}: %{GREEDYDATA:nginx.message}" }
      overwrite => [ "message" ]
    }
    date {
      match => [ "nginx.time", "yyyy/MM/dd HH:mm:ss" ]
      target => "@timestamp"
    }
  } else if "access.log" in [log][file][path] {
    grok {
      match => { "message" => "%{COMBINEDAPACHELOG}" }
    }
    date {
      match => [ "timestamp", "dd/MMM/yyyy:HH:mm:ss Z" ]
      target => "@timestamp"
    }
  }
}


output {
  elasticsearch {
    hosts => ["http://172.17.0.2:9200"]
    index => "nginx-logs-%{+YYYY.MM.dd}"
  }
  stdout { codec => rubydebug }
}

